<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bdddf6"
    tools:context=".Soal6_B">

<LinearLayout
    android:background="#bdddf6"
    android:layout_marginTop="308dp"
    android:id="@+id/llQuestion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:padding="16dp"
            android:background="@drawable/button_background"
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Gambar diatas merupakan unsur apa?"
            android:textAlignment="center"
            android:textColor="@color/white" />
</LinearLayout>

    <RelativeLayout
        android:id="@+id/RLAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llQuestion"
        android:paddingTop="16dp"
        android:gravity="center_horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnAnswer1"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:text="Seng"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnAnswer2"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@id/BtnAnswer1"
            android:background="@drawable/button_background"
            android:text="Timah"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnAnswer3"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_below="@id/BtnAnswer1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/poppins_semibold"
            android:text="Stronsium"
            android:textColor="@color/white"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnAnswer4"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_below="@id/BtnAnswer1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@id/BtnAnswer1"
            android:background="@drawable/button_background"
            android:text="Selenium"
            android:fontFamily="@font/poppins_semibold"
            android:textAllCaps="false" />


    </RelativeLayout>

</RelativeLayout>