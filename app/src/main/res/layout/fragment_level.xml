<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelFragment"
    android:background="#bdddf6"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnLevel1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        android:textAllCaps="false"
        android:text="First Level"
        android:fontFamily="@font/montserrat_black"
        android:textSize="32dp"
        android:textColor="@color/white"
        android:background="@drawable/button_background"/>

        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnLevel2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        android:textAllCaps="false"
        android:text="Second Level"
        android:fontFamily="@font/montserrat_black"
        android:textSize="32dp"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
            />

        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnLevel3"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        android:fontFamily="@font/montserrat_black"
        android:textSize="32dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Third Level"
        android:background="@drawable/button_background"
            />

        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnCoomingSoon"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_black"
        android:textSize="32dp"
        android:textColor="@color/white"
        android:text="Cooming Soon"
        android:background="@drawable/button_background"/>
    </LinearLayout>
</FrameLayout>